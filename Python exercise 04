
#Answer to the question no. 01

i = 1

while i <= 1000:
    if i % 3 == 0:
        print(i)
    i = i + 1



#Answer to the question no. 02

# 1 inch = 2.54 cm

inch = float(input('Enter inches: '))

while inch >= 0:

    cm = inch * 2.54
    print(cm)

    inch = float(input('Enter inches: '))

print("End")


#Answer to the question no. 03

numbers = []
print("Enter numbers until they enter an empty string to quit.")

while True:

    user_input = input("Enter number:")

    if user_input == "":
        break

    try:
        num = float(user_input)
        numbers.append(num)
    except ValueError:
        print("Please enter a valid number.")


print(f"max number: {max(numbers)}")
print(f"min number: {min(numbers)}")



#Answer to the question no. 04

import random
secret_number = random.randint(1, 10)
print("I am thinking a number between 1 and 10, Can you guess it?")

while True:

    try:
        guess = int(input("Guess the number: "))

        if guess > secret_number:
            print("You guessed too high")
        elif guess < secret_number:
            print("You guessed too low")
        else:
            print("You guessed the correct number")
            break

    except ValueError:
       print("Please enter a valid number.")



#Answer to the question no. 05

correct_username = "python"
correct_password = "rules"

attempts = 0

print("Enter username and password")

while attempts <= 5:
    username = input("Enter username: ")
    password = input("Enter password: ")

    if username == correct_username and password == correct_password:
        print("Welcome!")
        break


    else:
        print("Wrong username or password")
        attempts += 1


    if attempts == 5:
        print("Access denied")




#Answer to the question no 06

import random


total_points = int(input("How many random points should be generated? "))
points_inside_circle = 0

for _ in range(total_points):
    x = random.uniform(-1, 1)
    y = random.uniform(-1, 1)

    if x ** 2 + y ** 2 < 1:
        points_inside_circle += 1

# pi using the formula: pi = 4 * n / N
approx_pi = 4 * points_inside_circle / total_points

print(f"Approximation of pi: {approx_pi}")
print()

